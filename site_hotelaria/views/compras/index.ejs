    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="card shadow" style="    padding: 20px;min-height: 700px;">
            <header class="container"> 
              <section class="teste">

                <h1>Compras</h1>

                <br>
                <hr>
                <br>

                <section class="dados-nota">
                  <h2>Dados da Nota Fiscal</h2>

                  <aside id="alert-msg-dados">
        
                  </aside>

                  <div class="form">
                    
                      <div class="row g-3">
                        <div class="col">
                          <label for="cnpj" class="form-label">CNPJ</label>

                          <div class="cnpj-group">
                            <input type="text" class="form-control" name="cnpj" id="cnpj" placeholder="Insira o CNPJ" maxlength="18">
                            
                            <div class="cnpj-button ml-2 mr-3">
                              <button class="btn btn-primary" id="btn-cnpj">Buscar</button>
                            </div>
                          </div>
                        </div>

                        <div class="col">
                          <label for="nome" class="form-label">Razão Social</label>
                           <input type="text" class="form-control" name="nome" id="nome" placeholder="Busque um CNPJ" disabled>
                        </div>
                      </div>

                      <div class="row g-3 mt-4">
                        <div class="col">
                            <label for="num-nota" class="form-label">Nº Nota</label>
                            <input type="number" class="form-control" name="num-nota" id="num-nota" placeholder="Número da nota fiscal">
                        </div>
                        <div class="col">
                            <label for="data-nota" class="form-label">Data Nota</label>
                            <input type="date" class="form-control" name="data-nota" id="data-nota" >
                        </div>
                        <div class="col">
                          <label for="valor-nota" class="form-label">Valor Total</label>
                          <input type="number" class="form-control" name="valor-nota" id="valor-nota" placeholder="Valor total da nota" >
                      </div>
                    </div>
                  </div>
                </section>
                
                <br>
                <hr>
                <br>

                <section class="produto-nota">
                  <h2>Itens da Nota Físcal</h2>

                  <aside id="alert-msg-produtos">
        
                  </aside>

                  <div class="form">
                      <div class="row g-3">
                        <div class="col">
                          <label for="produto" class="form-label">Produto</label>
                          <input type="number" class="form-control" name="produto" id="produto" placeholder="Insira o código do produto" maxlength="18">
                        </div>

                        <div class="col">
                          <label for="quantidade" class="form-label">Quantidade</label>
                           <input type="number" class="form-control" name="quantidade" id="quantidade" placeholder="Quantidade do protudo">
                        </div>

                        <div class="col">
                          <label for="valor-uni" class="form-label">Valor unitário</label>
                           <input type="number" class="form-control" name="valor-uni" id="valor-uni" placeholder="Valor unitário">
                        </div>

                        <div class="box-buttons">
                          <button class="btn btn-info" id="btn-adicionar">+</button>
                        </div>
                      </div>
                  </div>

                  <table class="table table-striped">
                    <thead class="table-info">
                        <tr>
                            <th>ID</th>
                            <th>Produto</th>
                            <th>Quantidade</th>
                            <th>Valor Unitário</th>
                            <th>Valor Total</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
        
                    <tbody id="lista-produtos">
                        
                    </tbody>
                  </table>

                  <aside id="alert-msg-valor">
        
                  </aside>

                  <section class="total mt-5">
                    <div>
                      <label for="desconto" class="form-label">Descontos</label>
                      <input type="number" class="form-control" name="desconto" id="desconto" placeholder="Total de descontos" value="0">
                    </div>

                    <div class="valor-total-produtos">
                      <h3>Valor total: </h3>
                    </div>
                  </section>
                </section>

                <div class="box-buttons">
                  <button class="btn btn-success" id="btn-gravar">Gravar</button>
                </div>
              </section>
