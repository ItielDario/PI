          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="card shadow" style="    padding: 20px;min-height: 700px;">
            <!-- ##### Listar Produtos Start ##### -->
            <header class="container">
              <section class="teste">

                <h1>Lista de produtos</h1>

                <div class="text-right exportButtons">
                  <button id="exportPDF" class="btn btn-primary" style="font-weight: 400;">Exportar PDF</button>
                  <button id="exportEXCEL" class="btn btn-primary" style="font-weight: 400;">Exportar EXCEL</button>
                </div>

                <table class="table table-striped relatGeral">
                    <thead class="table-info"> 
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Descrição</th>
                        <th>Preço</th>
                        <th>Estoque</th>
                        <th class="acoes">Ações</th>
                    </thead>
                    <tbody>
                        <% for (let i = listaProdutos.length - 1; i >= 0; i--) { %>
                            <tr>
                                <td><%= listaProdutos[i].pro_cod %></td>
                                <td><%= listaProdutos[i].pro_nome %></td>
                                <td><%= listaProdutos[i].pro_descricao %></td>
                                <td><%= listaProdutos[i].pro_preco %></td>
                                <td><%= listaProdutos[i].pro_estoque %></td>
                                <th class="acoes">
                                    <a href="/adm/produto/alterar/<%= listaProdutos[i].pro_cod %>" class="btn-alterar"><img  src="/img/btn_editar.png" alt="Botão de editar"></a>
                                    <a class="btn-excluir" id="<%= listaProdutos[i].pro_cod %>"><img id="<%= listaProdutos[i].pro_cod %>" src="/img/btn_excluir.png" alt="Botão de exluir"></a>
                                </th>
                            </tr>
                        <% } %>
                    </tbody>
                </table>

                <div class="box-buttons">
                    <a href="/adm/produto/adicionar" class="btn btn-success">Cadastrar produto</a>
                </div>
              </section>
            </header>
            <!-- ##### Listar Produtos End ##### -->
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
