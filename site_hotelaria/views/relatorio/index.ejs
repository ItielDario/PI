    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="card shadow" style="padding: 20px;min-height: 700px;">
            <header class="container-fluid"> 
                <h1>Relatório Geral</h1>
                  <hr>
                  <div class="form-group sCriteria">
                      <fieldset>
                        <legend>Critério de Busca</legend>
                        <label class="mr-3" style="font-weight: 400; font-size: 22px;"><input class="criter" value="all" type="radio" name="searchCriteria" checked> Todos</label>
                        <label class="mr-3" style="font-weight: 400; font-size: 22px;"><input class="criter" value="orderNumber" type="radio" name="searchCriteria" style="margin-bottom: 3px;"> ID do Pedido</label>
                        <label class="mr-3" style="font-weight: 400; font-size: 22px;"><input class="criter" value="productName" type="radio" name="searchCriteria"> Nome do Produto</label>
                      </fieldset>
                      <fieldset class="dataFilter">
                        <hr>
                        <legend>FIltro de data</legend>
                        <label class="mr-3" style="font-weight: 400; font-size: 22px;"><input value="allDates" class="selDate" type="radio" name="searchDate" checked> Todas as datas</label>
                        <label class="mr-3" style="font-weight: 400; font-size: 22px;"><input value="selectedDate" class="selDate" type="radio" name="searchDate"> Selecionar data</label>
                        <div>
                          <label class="mr-3" style="font-weight: 400; font-size: 22px;"></label>Inicio <input type="date" class="date-picker-in" disabled required></label>
                          <label class="mr-3" style="font-weight: 400; font-size: 22px;"></label>Fim <input type="date" class="date-picker-out" disabled required></label>
                        </div>
                      </fieldset>
                      <hr>
                  </div>
                  <div class="form-group sInput">
                      <div class="input-group mb-3">
                          <input placeholder="Digite o Termo" class="form-control searchField" style="font-weight: 400; height: 47px;" type="text" id="inputSearch" disabled>
                          <div>
                              <button class="btn btn-primary mt-0 " style="font-weight: 400;" type="button" id="btnSearch"><i class="fas fa-search"></i> Buscar</button>
                          </div>
                      </div>
                  </div>
                  <hr>
                  <div class="text-right exportButtons">
                      <button id="exportPDF" class="btn btn-primary" style="font-weight: 400;">Exportar PDF</button>
                      <button id="exportEXCEL" class="btn btn-primary" style="font-weight: 400;">Exportar EXCEL</button>
                  </div>

                <table class="table table-striped relatGeral">
                  <thead class="table-info" >
                      <tr class="align-middle text-center font-weight-bold">
                          <th class="align-middle">ID</th>
                          <th class="align-middle">Fornecedor</th>
                          <th class="align-middle">Produto</th>
                          <th class="align-middle">Quantidade</th>
                          <th class="align-middle">Valor Unitário</th>
                          <th class="align-middle">Data da Compra</th>
                          <th class="align-middle">Desconto</th>
                      </tr>
                  </thead>
      
                  <tbody style="text-align: center;">
                      <% for(let i = 0; i < lista.length; i++) { %>
                          <tr class="align-middle text-center">
                              <!-- p.pro_nome, i.ite_quantidade, i.ite_valor_uni, c.com_valor_total, c.com_data, c.com_desconto -->
                              <td class="" style="font-weight: 400;"><%= lista[i].ite_com_cod %></td>
                              <td class="align-middle" style="font-weight: 400;"><%= lista[i].for_razao_social %></td>
                              <td class="align-middle" style="font-weight: 400;"><%= lista[i].pro_nome %></td>
                              <td class="align-middle" style="font-weight: 400;"><%= lista[i].ite_quantidade %></td>
                              <td class="align-middle" style="font-weight: 400;">R$ <%= (lista[i].ite_valor_uni) %></td>
                              <td class="align-middle" style="font-weight: 400;"><%= lista[i].com_data %></td>
                              <td class="align-middle" style="font-weight: 400;"><%= lista[i].com_desconto %></td>
                          </tr>
                      <% } %>
                  </tbody>
              </table>
                
            </header>
        </div>
